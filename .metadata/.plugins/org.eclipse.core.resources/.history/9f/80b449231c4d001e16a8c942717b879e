import java.util.*;

public class help {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int num = sc.nextInt();
		int result = 0;
		for (int i = 1; i <= num; i++) {
			if (i == num) {
				result = i + result;
				System.out.print((i));
			} else {
				result = i + result;
				System.out.print((i) + " + ");
			}
		}
		System.out.println(" = " + result);
	}

}

