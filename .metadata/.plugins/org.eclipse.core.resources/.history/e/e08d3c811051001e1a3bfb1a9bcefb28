
public class monte {

	public static void main(String[] args) {
		long cnt = 0;
		long isquadrant = 0;
		
		while (true) {
			double x = (Math.random());//*10000001)/10000000;
			double y = (Math.random());//*10000001)/10000000;
			if((x*x)+(y*y)<=1) {
				isquadrant++;
			}
			System.out.println(isquadrant/cnt*4);
			if(cnt++==1_000_000_000L) {
				break;
			}
			
		}
		System.out.print("cnt : "+ cnt + " ");
		System.out.println(isquadrant/cnt*4);

	}

}
