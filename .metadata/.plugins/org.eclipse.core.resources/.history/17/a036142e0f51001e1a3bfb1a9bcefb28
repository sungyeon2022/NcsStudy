
public class monte {

	public static void main(String[] args) {
		long cnt = 0;
		double isquadrant = 0;
		
		while (true) {
			double x = (Math.random());//*10000001)/10000000;
			double y = (Math.random());//*10000001)/10000000;
			if((x*x)+(y*y)<=1) {
				isquadrant++;
			}
			if(cnt++==50_0000_0000L) {
				break;
			}
			
		}
		System.out.print("cnt : "+ cnt/1000000 + " ");
		System.out.println(isquadrant/cnt*4);

	}

}
